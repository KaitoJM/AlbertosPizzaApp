<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jm.albertospizza.FragmentOrders"
    android:background="@color/colorPrimaryDark">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/layout_order_footer"
            android:id="@+id/list_orders"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:id="@+id/layout_order_footer">

            <TextView
                android:text="P375.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_total_price"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textSize="24sp" />

            <Button
                android:text="ORDER NOW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_order_now"
                android:layout_weight="0.44"
                android:textColor="@android:color/background_light"
                android:background="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
