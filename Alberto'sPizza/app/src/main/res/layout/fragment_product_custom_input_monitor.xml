<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.jm.albertospizza.Product_custom_input_monitor"
    android:background="@color/colorPrimary">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:padding="10dp">

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_cutom_input_quantity"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:textSize="36sp" />

        <TextView
            android:text="Italian Pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/txt_cutom_input_monitor_name"
            android:textColor="@android:color/background_dark"
            android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <TextView
            android:text="P85.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cutom_input_monitor_name"
            android:layout_alignParentStart="true"
            android:id="@+id/txt_cutom_input_price"
            android:textColor="@android:color/black" />

        <TextView
            android:text="TOTAL PRICE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_cutom_input_totalprice"
            android:textColor="@color/colorAccent"
            android:layout_above="@+id/txt_cutom_input_quantity"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</FrameLayout>
